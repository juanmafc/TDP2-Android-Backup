<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
    android:id="@+id/floating_menu_background"
    android:visibility="gone"
    android:background="#55000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>

    <toan.android.floatingactionmenu.FloatingActionsMenu
        android:id="@+id/multiple_actions_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="bottom|end"
        app:fab_addButtonColorNormal="@color/colorPrimary"
        app:fab_addButtonColorPressed="@color/colorAccent"
        app:fab_addButtonPlusIconColor="@color/half_black"
        app:fab_expandDirection="up"
        app:fab_labelStyle="@style/menu_labels_style"
        app:fab_menuIcon="@drawable/filter"
        app:layout_anchorGravity="center_vertical|left">


        <toan.android.floatingactionmenu.FloatingActionButton
            android:id="@+id/filter_action_price_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/colorPrimary"
            app:fab_colorPressed="@color/colorAccent"
            app:fab_icon="@drawable/ic_attach_money_white"
            app:fab_size="mini"
            app:fab_title="  Rango de Precio  " />

        <toan.android.floatingactionmenu.FloatingActionButton
            android:id="@+id/filter_action_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/colorPrimary"
            app:fab_colorPressed="@color/colorAccent"
            app:fab_icon="@drawable/ic_star_white"
            app:fab_size="mini"
            app:fab_title="  Puntaje  " />

        <toan.android.floatingactionmenu.FloatingActionButton
            android:id="@+id/filter_action_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/colorPrimary"
            app:fab_colorPressed="@color/colorAccent"
            app:fab_icon="@drawable/ic_location_on_white"
            app:fab_size="mini"
            app:fab_title="  Distancia  " />

        <toan.android.floatingactionmenu.FloatingActionButton
            android:id="@+id/filter_action_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/colorPrimary"
            app:fab_colorPressed="@color/colorAccent"
            app:fab_icon="@drawable/ic_restaurant_white"
            app:fab_size="mini"
            app:fab_title="  CategorÃ­a  " />


    </toan.android.floatingactionmenu.FloatingActionsMenu>

</RelativeLayout>