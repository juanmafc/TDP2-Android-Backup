<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/commerce_name_textview"
        android:layout_width="345dp"
        android:layout_height="31dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:ellipsize="marquee"
        android:gravity="center"
        android:singleLine="true"
        android:text="Nombre del restaurante"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.422"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/commerce_categories_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:singleLine="true"
        android:text="Categoría 1 - Categoría 2 - Categoría 3"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/commerce_name_textview" />

    <TextView
        android:id="@+id/commerce_information_address_label"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Dirección:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/commerce_categories_textview" />

    <TextView
        android:id="@+id/commerce_information_address_text"
        android:layout_width="273dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="Santa Fe 1234. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla mauris felis, interdum eu varius nec."
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.013"
        app:layout_constraintStart_toEndOf="@+id/commerce_information_address_label"
        app:layout_constraintTop_toBottomOf="@+id/commerce_categories_textview" />

    <TextView
        android:id="@+id/commerce_information_open_time_label"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Horario de atención:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/commerce_information_address_text" />

    <TextView
        android:id="@+id/commerce_information_open_time_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="18 - 00"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/commerce_information_open_time_label"
        app:layout_constraintTop_toBottomOf="@+id/commerce_information_address_text" />


    <RelativeLayout
        android:id="@+id/comment_commerce_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/commerce_information_open_time_text">

        <TextView
            android:id="@+id/stars_button_information"
            android:layout_width="67dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="95dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/colorHoyComoGrey"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="3.9"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/stars_button_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/circle_button"
            android:backgroundTint="@color/colorStar"
            android:text="★"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="18dp" />


        <TextView
            android:id="@+id/open_button_information"
            android:layout_width="67dp"
            android:layout_height="30dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_alignStart="@+id/closed_button_information"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/colorHoyComoGrey"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Abierto"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="8dp"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/open_button_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="4dp"
            android:layout_alignStart="@+id/closed_button_icon"
            android:background="@drawable/circle_button"
            android:backgroundTint="@color/colorGreen"
            android:text="✓"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            app:layout_constraintEnd_toStartOf="@+id/closed_button_information" />


        <TextView
            android:id="@+id/closed_button_information"
            android:layout_width="67dp"
            android:layout_height="30dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="65dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/colorHoyComoGrey"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Cerrado"
            android:textSize="8dp"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/closed_button_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="117dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/circle_button"
            android:backgroundTint="@color/colorRed"
            android:text="✘"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            app:layout_constraintEnd_toStartOf="@+id/closed_button_information" />

    </RelativeLayout>

