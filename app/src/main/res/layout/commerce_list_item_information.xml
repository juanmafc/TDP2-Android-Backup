<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">

    <ImageView
        android:id="@+id/commerce_list_item_information_logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:maxHeight="35dp"
        android:maxWidth="74dp"
        android:src="@drawable/store" />

    <TextView
        android:id="@+id/commerce_list_item_information_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/commerce_list_item_information_logo"
        android:layout_toStartOf="@+id/commerce_list_item_information_promotion_text"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="Nombre del comercio. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam condimentum, leo nec tincidunt eleifend, orci libero tristique velit, eu maximus justo lectus sit amet justo. "
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />


    <TextView
        android:id="@+id/commerce_list_item_information_categories"
        android:layout_width="178dp"
        android:layout_height="20dp"
        android:layout_alignEnd="@+id/commerce_list_item_information_name"
        android:layout_alignStart="@+id/commerce_list_item_information_name"
        android:layout_below="@+id/commerce_list_item_information_name"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="Categorías. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam condimentum, leo nec tincidunt eleifend, orci "
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    <ImageView
        android:id="@+id/commerce_list_item_information_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/commerce_list_item_information_name"
        android:layout_below="@+id/commerce_list_item_information_categories"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:contentDescription="info"
        android:cropToPadding="false"
        android:maxHeight="35dp"
        android:maxWidth="74dp"
        android:src="@drawable/path7_7" />

    <ImageView
        android:id="@+id/commerce_list_item_information_not_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/commerce_list_item_information_name"
        android:layout_below="@+id/commerce_list_item_information_categories"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:contentDescription="info"
        android:cropToPadding="false"
        android:maxHeight="35dp"
        android:maxWidth="74dp"
        android:src="@drawable/path7_8" />


    <TextView
        android:id="@+id/commerce_list_item_information_score"
        android:layout_width="50dp"
        android:layout_height="22dp"
        android:layout_alignStart="@+id/commerce_list_item_information_score_icon"
        android:layout_alignTop="@+id/commerce_list_item_information_like"
        android:layout_marginStart="11dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/colorHoyComoGrey"
        android:clickable="false"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="3.9"
        android:textSize="12dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/commerce_list_item_information_score_icon"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignTop="@+id/commerce_list_item_information_like"
        android:layout_toEndOf="@+id/commerce_list_item_information_like"
        android:layout_marginStart="4dp"
        android:background="@drawable/circle_button"
        android:backgroundTint="@color/colorStar"
        android:clickable="false"
        android:gravity="center"
        android:text="★"
        android:textColor="@android:color/white"
        android:textSize="10dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/commerce_list_item_information_distance"
        android:layout_width="65dp"
        android:layout_height="22dp"
        android:layout_alignStart="@+id/commerce_list_item_information_distance_icon"
        android:layout_alignTop="@+id/commerce_list_item_information_like"
        android:layout_marginStart="10dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/colorHoyComoGrey"
        android:clickable="false"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:paddingRight="5dp"
        android:text="99.9 Km"
        android:textSize="12dp"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/commerce_list_item_information_distance_icon"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignTop="@+id/commerce_list_item_information_like"
        android:layout_toEndOf="@+id/commerce_list_item_information_score"
        android:layout_marginStart="4dp"
        android:src="@drawable/distance_loc" />


    <TextView
        android:id="@+id/lead_time_textview"
        android:layout_width="63dp"
        android:layout_height="22dp"
        android:layout_alignStart="@+id/lead_time_textview_icon"
        android:layout_alignTop="@+id/commerce_list_item_information_like"
        android:layout_marginStart="11dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/colorHoyComoGrey"
        android:clickable="false"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:text="60+ Min"
        android:textSize="12dp"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/lead_time_textview_icon"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignTop="@+id/commerce_list_item_information_like"
        android:layout_toEndOf="@+id/commerce_list_item_information_distance"
        android:layout_marginStart="4dp"
        android:src="@drawable/motorcycle" />

    <ImageView
        android:id="@+id/commerce_list_item_information_promotion_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:maxHeight="35dp"
        android:maxWidth="74dp"
        android:src="@drawable/promotion_list" />

    <TextView
        android:id="@+id/commerce_list_item_information_promotion_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="13dp"
        android:rotation="45"
        android:text="25%"
        android:textAppearance="@style/TextAppearance.AppCompat.Inverse" />


</RelativeLayout>