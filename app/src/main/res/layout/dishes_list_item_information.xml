        <TextView
            android:id="@+id/dish_name"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Plato. Lorem ipsum dolor sit amet, eu quas adhuc facilisis pri, vix pericula constituam at, eam te simul quando sanctus."
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/dish_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/dish_name"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text="InformaciÃ³n del plato. Lorem ipsum dolor sit amet, eu quas adhuc facilisis pri, vix pericula constituam at, eam te simul quando sanctus." />

        <TextView
            android:id="@+id/dish_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/dish_description"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="$888"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/dish_price_no_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dish_description"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:layout_toStartOf="@+id/dish_price"
            android:visibility="invisible"
            android:textColor="@android:color/darker_gray"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="$999"
            android:textSize="12dp"
            />


        <ImageView
            android:id="@+id/dish_discount"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/promotion"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/dish_discount_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="8dp"
            android:text="10%"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/cardview_light_background"
            android:visibility="invisible"
            />

